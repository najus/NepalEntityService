[flake8]
exclude = .venv,.git,__pycache__,entity-db,nes-db,examples
max-line-length = 88
# E203: whitespace before ':' (conflicts with black)
# E501: line too long (handled by black)
# W503: line break before binary operator (conflicts with black)
# W291: trailing whitespace (handled by black)
# W293: blank line contains whitespace (handled by black)
# F401: imported but unused (common in __init__.py and type hints)
# F541: f-string without placeholders (acceptable for consistency)
# F821: undefined name (acceptable for forward references in type hints)
extend-ignore = E203,E501,W503,W291,W293,F401,F541,F821
# Per-file ignores for common patterns
per-file-ignores =
    tests*/*:F841
    */migration/*:F841
    nes2/core/utils/devanagari.py:F601,F541,F601